<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DHI.Services.DS" Version="4.0.3" />
    <PackageReference Include="DHI.Services.Jobs" Version="15.1.0" />
    <PackageReference Include="DHI.Services.Jobs.Automations" Version="3.0.0" />
    <PackageReference Include="DHI.Services.PostgreSQL" Version="8.1.2" />
    <PackageReference Include="DHI.Services.Windows" Version="1.1.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="7.0.1" />
    <PackageReference Include="Microsoft.Extensions.Hosting.WindowsServices" Version="7.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.EventSource" Version="8.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="DHI.Services">
      <HintPath>libs\DHI.Services.dll</HintPath>
    </Reference>
    <Reference Include="DHI.Services.Jobs">
      <HintPath>libs\DHI.Services.Jobs.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Update="jobs.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
