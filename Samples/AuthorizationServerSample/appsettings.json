{
  "AppConfiguration": {
    "HstsMaxAgeInDays": 1
  },
  "Registration": {
    "AccountActivationUri": "http://api.dhigroup.com/account/activation",
    "PasswordResetUri": "http://api.dhigroup.com/account/passwordreset",
    "SmtpHost": "smtpserv.dhi.dk",
    "SmtpPort": 25,
    "SmtpSetCredentials": false,
    "TokenLifeTime": "1.00:00:00"
  },
  "Tokens": {
    "Issuer": "dhigroup.com",
    "Audience": "dhigroup.com",
    "PrivateRSAKey": "[env:PrivateRSAKey]",
    "PublicRSAKey": "[env:PublicRSAKey]",
    "ExpirationInMinutes": 30,
    "RefreshExpirationInDays": 365
  },
  "postgres-accounts": {
    "$type": "DHI.Services.WebApi.AccountServiceConnection, DHI.Services.WebApi",
    "RepositoryConnectionString": "Server=localhost;Port=5432;Database=YourDatabase;User Id=postgres;Password=YourPassword",
    "RepositoryType": "DHI.Services.Provider.PostgreSQL.AccountRepository, DHI.Services.Provider.PostgreSQL",
    "Name": "Account service connection",
    "Id": "postgres-accounts"
  },
  "Swagger": {
    "SpecificationName": "SecurityOpenAPISpecification",
    "DocumentName": "SecurityWebAPI",
    "DocumentTitle": "Security Web API",
    "DocumentDescription": "[AppData]SwaggerInfo.md"
  },
  "UserManagementInDatabase": "true", // Toggle to wheter want to use database provider or not
  "PermittedOrigins": [
    "*"
  ],
  "CORS": "localhost;ds-dev1"
}
