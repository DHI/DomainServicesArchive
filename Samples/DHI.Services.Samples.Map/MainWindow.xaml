                                <ComboBox ItemsSource="{Binding StyleIds}" SelectedItem="{Binding SelectedStyleId}" />
                                <Separator Margin="0,8,0,8"/>
                                <TextBlock Text="Inline Style Code (used if no styles.json or no selection)" />
                                <TextBox Text="{Binding StyleCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
