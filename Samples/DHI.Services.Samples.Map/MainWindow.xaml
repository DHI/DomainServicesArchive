                                    <TextBox Width="60" Text="{Binding VectorMaxLength, Mode=TwoWay}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                    <TextBlock Text="Isoline:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <ComboBox Width="160"
                                              SelectedValuePath="Content"
                                              SelectedValue="{Binding Isoline}">
                                        <ComboBoxItem Content="None"/>
                                        <ComboBoxItem Content="Major"/>
                                        <ComboBoxItem Content="Minor"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                    <TextBlock Text="Coloring Type:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <ComboBox Width="160"
