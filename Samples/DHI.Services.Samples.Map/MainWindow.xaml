                </ScrollViewer>

                <GridSplitter Grid.Row="1" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#ddd"/>

                <Grid Grid.Row="1" Grid.Column="2" Margin="8">
                    <Border BorderBrush="#ddd" BorderThickness="1" CornerRadius="2">
