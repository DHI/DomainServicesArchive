<Window x:Class="DHI.Services.Samples.GIS.Shapefile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GIS Playground" Height="700" Width="1407"
        MinWidth="1200" MinHeight="500"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top toolbar -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="3" Margin="8">
            <TextBlock Text="Path:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox Text="{Binding SelectedPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               Width="480" Margin="0,0,8,0" VerticalAlignment="Center"/>
            <Button Content="Browse File…" Margin="0,0,6,0" Padding="10,4"
              Command="{Binding BrowseFileCommand}"/>
            <Button Content="Browse Folder…" Margin="0,0,6,0" Padding="10,4"
              Command="{Binding BrowseFolderCommand}"/>
            <Button Content="Reload" Margin="0,0,6,0" Padding="10,4"
              Command="{Binding ReloadCommand}"/>
            <Separator Margin="6,0" Width="10"/>
            <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="6,0,6,0"/>
            <ComboBox Width="160" Margin="0,0,6,0"
              ItemsSource="{Binding AttributeNames}"
              SelectedItem="{Binding FilterAttributeName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <ComboBox Width="110" Margin="0,0,6,0"
                ItemsSource="{Binding AvailableOperators}"
                SelectedItem="{Binding SelectedOperator, Mode=TwoWay}"
                DisplayMemberPath="Label"/>
            <TextBox Width="160" Margin="0,0,6,0"
               Text="{Binding FilterEqualsValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Apply" Padding="10,4" Command="{Binding ApplyFilterCommand}"/>
        </DockPanel>

        <!-- Left: collections -->
        <GroupBox Header="Collections" Grid.Row="1" Grid.Column="0" Margin="8">
            <DockPanel>
                <ListBox ItemsSource="{Binding CollectionIds}"
                 SelectedItem="{Binding SelectedCollectionId, Mode=TwoWay}"
                 HorizontalContentAlignment="Stretch"
                 MinHeight="200"/>
                <TextBlock Text="Select a shapefile (id) from the list."
                   Foreground="Gray" Margin="4"
                   DockPanel.Dock="Bottom"/>
            </DockPanel>
        </GroupBox>

        <!-- Splitter -->
        <GridSplitter Grid.Row="1" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#ddd"/>

        <!-- Right: attributes + features -->
        <Grid Grid.Row="1" Grid.Column="2" Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="220"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,6">
                <TextBlock Text="Selected: " VerticalAlignment="Center"/>
                <TextBlock Text="{Binding SelectedCollectionId}" FontWeight="Bold" Margin="4,0"/>
                <Button Content="Save As…" Margin="12,0,0,0" Padding="10,4"
                Command="{Binding SaveAsCommand}"/>
            </StackPanel>

            <GroupBox Header="Attributes" Grid.Row="1">
                <DataGrid ItemsSource="{Binding AttributesView}"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"/>
            </GroupBox>

            <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" Background="#ddd"/>

            <GroupBox Header="Features" Grid.Row="3">
                <DataGrid ItemsSource="{Binding FeaturesView}"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"/>
            </GroupBox>
        </Grid>

        <!-- Status bar -->
        <StatusBar Grid.Row="2" Grid.ColumnSpan="3">
            <StatusBarItem>
                <TextBlock Text="{Binding Status}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
