<Window x:Class="DHI.Services.Samples.TimeSeries.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DHI.Services.Samples.TimeSeries.ViewModels"
        xmlns:helpers="clr-namespace:DHI.Services.Samples.TimeSeries.Helpers"
        mc:Ignorable="d"
        Title="TimeSeries Playground"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        MinHeight="680" MinWidth="1020">

    <Window.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Connection -->
        <GroupBox Header="Connection" Grid.Row="0" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Path:" VerticalAlignment="Center"/>
                <TextBox Grid.Column="2"
                         Text="{Binding ConnectionPath}"
                         ToolTip="Folder (lists *.dfs0) or a DFS0 file"/>

                <StackPanel Grid.Column="4" Orientation="Horizontal">
                    <Button Content="Browse Folder" Command="{Binding BrowseFolderCommand}" Margin="0,0,8,0" Padding="10,6"/>
                    <Button Content="Browse File" Command="{Binding BrowseFileCommand}" Margin="0,0,8,0" Padding="10,6"/>
                    <Button Content="Connect" Command="{Binding ConnectCommand}" Padding="12,6"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Body -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: files & series -->
            <Border Grid.Column="0" BorderBrush="#ddd" BorderThickness="1" CornerRadius="3" Margin="0,0,10,0">
                <StackPanel Margin="10">
                    <TextBlock Text="DFS0 files (if folder selected)" FontWeight="SemiBold" Margin="0,0,0,6"/>
                    <WrapPanel>
                        <ListBox ItemsSource="{Binding CandidateFiles}"
                                 SelectedItem="{Binding SelectedFile}"
                                 DisplayMemberPath="DisplayName"
                                 Width="300" Height="160"/>
                        <Button Content="Open Selected File" Command="{Binding ConnectToSelectedFileCommand}" Margin="8,0,0,0" Padding="10,6" VerticalAlignment="Top"/>
                    </WrapPanel>

                    <Separator Margin="0,10,0,10"/>

                    <TextBlock Text="Time series IDs (from current DFS0)" FontWeight="SemiBold" Margin="0,0,0,6"/>
                    <WrapPanel>
                        <ListBox ItemsSource="{Binding SeriesIds}"
                                 SelectedItem="{Binding SelectedSeriesId}"
                                 DisplayMemberPath="Id"
                                 Width="300" Height="200"/>
                        <Button Content="Reload IDs" Command="{Binding LoadIdsCommand}" Margin="8,0,0,0" Padding="10,6" VerticalAlignment="Top"/>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Right: actions & results -->
            <Border Grid.Column="1" BorderBrush="#ddd" BorderThickness="1" CornerRadius="3">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">

                        <TextBlock Text="Range (UTC) yyyy-MM-dd HH:mm:ss" FontWeight="SemiBold"/>
                        <WrapPanel Margin="0,4,0,0">
                            <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBox Width="160" Text="{Binding FromText}"/>
                            <TextBlock Text="To:" VerticalAlignment="Center" Margin="12,0,6,0"/>
                            <TextBox Width="160" Text="{Binding ToText}"/>
                            <Button Content="Load Values" Command="{Binding LoadValuesCommand}" Margin="12,0,0,0" Padding="10,4"/>
                        </WrapPanel>

                        <StackPanel Margin="0,8,0,0">
                            <TextBlock Text="Single time (UTC) yyyy-MM-dd HH:mm:ss"/>
                            <WrapPanel>
                                <TextBox Width="200" Text="{Binding AtText}"/>
                                <Button Content="Get Exact" Command="{Binding GetAtTimeCommand}" Margin="8,0,0,0" Padding="10,4"/>
                                <Button Content="Get Interpolated" Command="{Binding GetInterpolatedAtTimeCommand}" Margin="8,0,0,0" Padding="10,4"/>
                            </WrapPanel>
                        </StackPanel>

                        <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                            <TextBlock Text="Aggregations:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <Button Content="Min" Command="{Binding MinCommand}" Margin="0,0,8,0" Padding="8,4"/>
                            <Button Content="Max" Command="{Binding MaxCommand}" Margin="0,0,8,0" Padding="8,4"/>
                            <Button Content="Avg" Command="{Binding AvgCommand}" Margin="0,0,8,0" Padding="8,4"/>
                            <Button Content="Sum" Command="{Binding SumCommand}" Padding="8,4"/>
                        </StackPanel>

                        <TextBlock Text="{Binding InfoText}" Margin="0,6,0,0" Foreground="#2c3e50"/>

                        <Separator Margin="0,8,0,8"/>

                        <TextBlock Text="Values" FontWeight="SemiBold"/>
                        <DataGrid ItemsSource="{Binding ValuesView}" AutoGenerateColumns="True" CanUserAddRows="False" Height="360" Margin="0,4,0,0"/>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <TextBlock Grid.Row="2" Text="{Binding ErrorText}" Foreground="#c0392b"
                   Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}"
                   Margin="0,8,0,0"/>
    </Grid>
</Window>
