<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net5.0;net8.0</TargetFrameworks>
        <OutputType>Library</OutputType>
        <IsPackable>true</IsPackable>
        <IncludeOpenAPIAnalyzers>true</IncludeOpenAPIAnalyzers>
        <DefaultItemExcludes>$(DefaultItemExcludes);nuget\*.log</DefaultItemExcludes>
        <NoWarn>$(NoWarn);1591</NoWarn>
        <PackageId>DHI.Services.JsonDocuments.WebApi</PackageId>
        <Version>5.1.1</Version>
        <PackageReleaseNotes>Upgrade Domain Services Packages</PackageReleaseNotes>
        <Company>DHI</Company>
        <Authors>dhigroup</Authors>
        <PackageLicenseExpression>BSD-3-Clause</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/DHI/DomainServices/blob/master/README.md</PackageProjectUrl>
        <RepositoryUrl>https://github.com/DHI/DomainServices</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <Description>Web API for JSON document services.</Description>
        <Product>DHI Domain Services</Product>
        <PackageTags>JSON</PackageTags>
        <PackageIcon>ds-icon-64.png</PackageIcon>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <GenerateDocumentationFile>True</GenerateDocumentationFile>
        <PackageReadmeFile>readme.md</PackageReadmeFile>
    </PropertyGroup>

    <PropertyGroup Condition="'$(GITHUB_ACTIONS)' == 'true'">
        <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="DHI.Services.JsonDocuments" Version="4.2.1"/>
        <PackageReference Include="DHI.Services.WebApiCore" Version="7.1.2"/>
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <None Include="nuget\readme.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

    <ItemGroup>
        <None Include="nuget\ds-icon-64.png" Pack="true" PackagePath=""/>
    </ItemGroup>

</Project>
