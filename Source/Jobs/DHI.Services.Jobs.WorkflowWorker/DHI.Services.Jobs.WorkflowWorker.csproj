<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <DefaultItemExcludes>$(DefaultItemExcludes)nuget\*.log</DefaultItemExcludes>
        <NoWarn>1591</NoWarn>
        <PackageId>DHI.Services.Jobs.WorkflowWorker</PackageId>
        <Version>4.1.0</Version>
        <PackageReleaseNotes>Updated DHI.Services.Jobs to v15.0.0</PackageReleaseNotes>
        <Company>DHI</Company>
        <Authors>dhigroup</Authors>
        <PackageLicenseExpression>BSD-3-Clause</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/DHI/DomainServices/blob/master/README.md</PackageProjectUrl>
        <RepositoryUrl>https://github.com/DHI/DomainServices</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <Description>Workflow worker for DHI Domain Services.</Description>
        <Product>DHI Domain Services</Product>
        <PackageTags>Jobs, Workflows</PackageTags>
        <PackageIcon>ds-icon-64.png</PackageIcon>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <GenerateDocumentationFile>True</GenerateDocumentationFile>
        <LangVersion>latest</LangVersion>
		<PackageReadmeFile>readme.md</PackageReadmeFile>
    </PropertyGroup>

    <PropertyGroup Condition="'$(GITHUB_ACTIONS)' == 'true'">
        <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="DHI.Services.Jobs" Version="15.0.0" />
        <PackageReference Include="Microsoft.AspNetCore.Owin" Version="5.0.11" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="5.0.0" />
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="System.ServiceProcess.ServiceController" Version="5.0.0" />
    </ItemGroup>

    <ItemGroup>
		<None Include="nuget\readme.md">
			<Pack>true</Pack>
			<PackagePath></PackagePath>
		</None>
        <None Include="nuget\ds-icon-64.png" Pack="true" PackagePath="" />
    </ItemGroup>

</Project>
